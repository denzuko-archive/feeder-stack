[{
		"type": "container",
		"title": "NodeRed",
		"name": "NodeRed",
		"description": "a flow-based development tool for the internet of things",
		"categories": ["feeder"],
		"platform": "linux",
		"logo": "https://nodered.org/about/resources/media/node-red-icon-2.png",
		"image": "nodered/node-red-docker:rpi-v8",
		"ports": [
			"1880/tcp"
		],
		"volumes": [{
			"container": "/data",
			"bind": "/home/feeder/config/node-red"
		}]
	},
	{
		"type": "container",
		"title": "mosquitto",
		"name": "mosquitto",
		"description": "a mqtt broker for the internet of things",
		"categories": ["feeder"],
		"platform": "linux",
		"logo": "https://mosquitto.org/images/mosquitto-text-side-28.png",
		"image": "holgerimbery/docker_mosquitto:latest",
		"ports": [
			"1883/tcp",
			"9001/tcp"
		],
		"volumes": [{
				"container": "/mqtt/config",
				"bind": "/home/feeder/config/mosquitto/config"
			},
			{
				"container": "/mqtt/log",
				"bind": "/home/feeder/config/mosquitto/log"
			},
			{
				"container": "/mqtt/config/data",
				"bind": "/home/feeder/config/mosquitto/data"
			}
		]
	},
	{
		"type": "container",
		"title": "influxdb",
		"name": "influxdb",
		"description": "a timebased database for the internet of things",
		"categories": ["feeder"],
		"platform": "linux",
		"logo": "https://influxdata.github.io/branding/img/downloads/influx-logo-complete--preview.svg",
		"image": "library/influxdb",
		"ports": [
			"8083/tcp",
			"8086/tcp",
			"2003/tcp"
		],
		"volumes": [{
				"container": "/var/lib/influxdb",
				"bind": "/home/feeder/config/influxdb/db"
			},
			{
				"container": "/etc/influxdb/influxdb.conf",
				"bind": "/home/feeder/config/influxdb/config/influxdb.conf"
			}
		],
		"command": "influxd -config /etc/influxdb/influxdb.conf"

	},
	{
		"type": "container",
		"title": "kapacitor",
		"name": "kapacitor",
		"description": "a Real-time Streaming Data Processing Engine",
		"categories": ["feeder"],
		"platform": "linux",
		"logo": "https://influxdata.github.io/branding/img/downloads/influx-logo-complete--preview.svg",
		"image": "library/kapacitor",
		"ports": [
			"9092/tcp"
		],
		"volumes": [{
				"container": "/var/lib/kapacitor",
				"bind": "/home/feeder/config/kapacitor/data"
			},
			{
				"container": "/etc/kapacitor/",
				"bind": "/home/feeder/config/kapacitor/config"
			}
		],
		"command": "kapacitord"
	},
	{
		"type": "container",
		"title": "telegraf",
		"name": "telegraf",
		"description": "collecting and reporting agent",
		"categories": ["feeder"],
		"platform": "linux",
		"logo": "https://influxdata.github.io/branding/img/downloads/influx-logo-complete--preview.svg",
		"image": "library/telegraf",
		"ports": [
			"8092/tcp",
			"8094/tcp",
			"8125/tcp"
		],
		"volumes": [{
				"container": "/etc/telegraf/telegraf.conf",
				"bind": "/home/feeder/config/telegraf/telegraf.conf"
			}

		]
	},
	{
		"type": "container",
		"title": "chronograf",
		"name": "chronograf",
		"description": "graphical interface to influxdb, telegraf, kapacitor",
		"categories": ["feeder"],
		"platform": "linux",
		"logo": "https://influxdata.github.io/branding/img/downloads/influx-logo-complete--preview.svg",
		"image": "library/chronograf",
		"ports": [
			"8888/tcp"
		],
		"volumes": [{
				"container": "/var/lib/chronograf",
				"bind": "/home/feeder/config/chronograf"
			}

		]
	},
	{
		"type": "stack",
		"title": "feeder-beta",
		"description": "feeder cluster - beta-version",
		"note": "feeder cluster - beta version (feeling adventurous?), please refer to <a href=\"https://github.com/holgerimbery/feeder\" target=\"_blank\">feeder documentation</a> for production deployments.",
		"categories": ["feeder"],
		"platform": "linux",
		"logo": "https://portainer.io/images/logos/registry.png",
		"repository": {
			"url": "https://github.com/holgerimbery/feeder",
			"stackfile": "stacks/feeder-docker-stack-beta.yml"
		}
	}

]
